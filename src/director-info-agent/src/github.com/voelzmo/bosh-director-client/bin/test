#!/bin/bash

echo 'Note: if you want to quickly run tests for just one package, do it like this:'
echo '  % ginkgo path/to/package'

result=0

echo -e "\n Formatting packages..."
for i in `ls -1 src/github.com/voelzmo/bosh-director-client/` ; do
  if [ -d "$i" ] ; then
    go fmt github.com/voelzmo/bosh-director-client/${i}/... 2> /dev/null
  fi
done
let "result+=$?"

echo -e "\n Looking for unchecked errors..."
errcheck -blank -ignoretests -verbose github.com/voelzmo/bosh-director-client/...
let "result+=$?"

echo -e "\n Vetting packages for potential issues..."
go vet github.com/voelzmo/bosh-director-client/...
let "result+=$?"

echo -e "\n Testing packages..."
ginkgo -r --randomizeAllSpecs --randomizeSuites --failOnPending --trace --race --progress --skip=vendor .
let "result+=$?"

if [ $result -eq 0 ]; then
  echo -e "\n\033[0;32mSUITE SUCCESS"
else
  echo -e "\n\033[0;31mSUITE FAILURE"
fi

exit $result
